---
import TimeIcon from "@/icons/Time.astro";
import { type Song } from "@/lib/data";

interface Props {
  songs: Song[];
}

const { songs } = Astro.props;
---

<table class="table-auto text-left min-w-full divide-y divide-gray-500/20">
  <thead class="">
    <tr class="text-secondary text-sm">
      <th class="px-4 py-2 font-[400]">#</th>
      <th class="px-4 py-2 font-[400]">Title</th>
      <th class="px-4 py-2 font-[400]">Plays</th>
      <th class="px-4 py-2 font-[400]"><TimeIcon /> </th>
    </tr>
  </thead>
  <tbody>
    <tr class="h-[16px]"></tr>
    {
      songs.map((song, idx) => (
        <tr class="text-secondary  hover:bg-white/10 overflow-hidden transition duration-300">
          <td class="px-4 py-2 rounded-tl-lg rounded-bl-lg w-5">{idx + 1}</td>
          <td class="px-4 py-2 flex gap-3">
            <picture class="flex items-center">
              <img
                src={song.image}
                alt={song.title}
                class="w-10 h-10 rounded-sm"
              />
            </picture>
            <div class="flex flex-col">
              <h3 class="text-white">{song.title}</h3>
              <span>{song.artists.join(", ")}</span>
            </div>
          </td>
          <td class="px-4 py-2">1,000,000</td>
          <td class="px-4 py-2 rounded-tr-lg rounded-br-lg">{song.duration}</td>
        </tr>
      ))
    }
  </tbody>
</table>
